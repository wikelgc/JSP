<html>					
<head>	
<meta charset = "UTF-8"/>				
<title>script_eventform_01</title>
	<script language="JavaScript">	
		function show(){		// 定义函数文本框
var value = document.myform.name.value ;      // 取得输入的内容
var password = document.myform.password.value ;      // 取得输入的内容
          if(value == "admin"){
              if(password == "000")
                  alert("登入成功") ;
              else
                alert("密码错误") ;
          }
          else
           alert("用户名输入错误") ;		
		}
	</script>
</head>					
<body>					
<form action="" method="post" name="myform" onsubmit = "show()">  <!-- 表单开始标记 -->
username:<input type="text" name="name"><br>
password:<input type="text" name="password"><br>
<input type = "reset" value = "重置"><br>		
<input type="submit" value="登入"><br>
</form>					
</body>					
